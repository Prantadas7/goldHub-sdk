{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false,
    "declaration": true,
    "sourceMap": false,
    "rootDirs": ["src", "tests"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "pretty": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["./src/**/*"]
}
